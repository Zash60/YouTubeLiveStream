<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- Menu Expandido -->
    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded_menu"
        android:paddingStart="12dp"
        android:paddingEnd="60dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="28dp"
        android:animateLayoutChanges="true">

        <!-- Botao Chat (Show/Hide) -->
        <ImageView
            android:id="@+id/btn_chat_toggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_view"
            android:layout_marginEnd="12dp"
            android:padding="8dp"
            android:contentDescription="@string/chat"
            app:tint="@color/text_primary"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <!-- Botao Privacidade -->
        <ImageView
            android:id="@+id/btn_privacy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_marginEnd="12dp"
            android:padding="8dp"
            android:contentDescription="@string/privacy"
            app:tint="@color/text_primary"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <!-- Botao Mute -->
        <ImageView
            android:id="@+id/btn_mute"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:layout_marginEnd="12dp"
            android:padding="8dp"
            android:contentDescription="@string/mute"
            app:tint="@color/text_primary"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <!-- Botao Parar -->
        <ImageView
            android:id="@+id/btn_stop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:padding="8dp"
            android:contentDescription="@string/stop_stream_action"
            app:tint="@color/error"
            android:background="?android:attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Botao Principal (Bolinha) -->
    <ImageView
        android:id="@+id/img_floating_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical|end"
        android:src="@android:drawable/ic_menu_camera"
        android:background="@drawable/bg_circle_red"
        android:padding="14dp"
        android:elevation="8dp"
        app:tint="#FFFFFF"
        android:contentDescription="@string/open_menu" />

</FrameLayout>
