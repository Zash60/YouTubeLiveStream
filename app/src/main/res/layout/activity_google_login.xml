<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Cabecalho -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_live"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Card de Thumbnail -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thumbnail_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:cardBackgroundColor="@color/surface_variant"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="12dp">
                    <ImageView
                        android:id="@+id/imgThumbnailPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:scaleType="centerInside"
                        app:tint="@color/text_disabled"/>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnSelectThumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="@string/select_thumbnail"
                    android:textSize="14sp"
                    android:backgroundTint="@color/accent_blue"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card de Titulo e Descricao -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Titulo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:id="@+id/etLiveTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_hint"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_disabled"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Descricao -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description_hint"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_disabled"
                    android:padding="16dp"
                    android:gravity="top"
                    android:minLines="3"
                    android:inputType="textMultiLine"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card de Configuracoes -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Visibilidade -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visibility_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinnerPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="16dp"/>

                <!-- Categoria -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="16dp"/>

                <!-- Latencia -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/latency_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinnerLatency"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="16dp"/>

                <!-- Conteudo para criancas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kids_content_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <RadioGroup
                    android:id="@+id/rgKids"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbNotForKids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/not_for_kids"
                        android:textColor="@color/text_primary"
                        android:buttonTint="@color/accent_blue"
                        android:checked="true"
                        android:layout_marginEnd="16dp"/>
                    <RadioButton
                        android:id="@+id/rbForKids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/for_kids"
                        android:textColor="@color/text_primary"
                        android:buttonTint="@color/accent_blue"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botao Criar Live -->
        <Button
            android:id="@+id/btnSignInCreate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/connect_create_live"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/youtube_red"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- ProgressBar e Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/progressLayout">
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/youtube_red"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
