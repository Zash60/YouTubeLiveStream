<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¡ Configurar Live"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- SEÃ‡ÃƒO DE THUMBNAIL (FALTAVA ISSO) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thumbnail (Capa)"
            android:textColor="#cccccc"
            android:layout_marginBottom="4dp"/>
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2d2d44"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgThumbnailPreview"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:scaleType="centerInside"
                    android:layout_marginBottom="8dp"
                    app:tint="#666666"/>

                <Button
                    android:id="@+id/btnSelectThumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Escolher Capa"
                    android:textSize="12sp"
                    android:backgroundTint="#4285F4"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TÃTULO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo"
            android:textColor="#cccccc"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etLiveTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: Jogando Minecraft Hardcore"
            android:background="@drawable/edit_text_background"
            android:textColor="#ffffff"
            android:textColorHint="#666666"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- DESCRIÃ‡ÃƒO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescriÃ§Ã£o"
            android:textColor="#cccccc"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Links, redes sociais, sobre a live..."
            android:background="@drawable/edit_text_background"
            android:textColor="#ffffff"
            android:textColorHint="#666666"
            android:padding="12dp"
            android:gravity="top"
            android:minLines="3"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp"/>

        <!-- VISIBILIDADE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visibilidade"
            android:textColor="#cccccc"
            android:layout_marginBottom="4dp"/>
        <Spinner
            android:id="@+id/spinnerPrivacy"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="16dp"/>

        <!-- CATEGORIA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textColor="#cccccc"
            android:layout_marginBottom="4dp"/>
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="16dp"/>

        <!-- LATÃŠNCIA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LatÃªncia (Delay)"
            android:textColor="#cccccc"
            android:layout_marginBottom="4dp"/>
        <Spinner
            android:id="@+id/spinnerLatency"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="16dp"/>

        <!-- CONTEÃšDO PARA CRIANÃ‡AS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ConteÃºdo para crianÃ§as (COPPA)?"
            android:textColor="#cccccc"
            android:layout_marginBottom="4dp"/>
        <RadioGroup
            android:id="@+id/rgKids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <RadioButton
                android:id="@+id/rbNotForKids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃ£o (Chat Ativo)"
                android:textColor="#ffffff"
                android:buttonTint="#FF0000"
                android:checked="true"
                android:layout_marginEnd="16dp"/>
            <RadioButton
                android:id="@+id/rbForKids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sim (Sem Chat)"
                android:textColor="#ffffff"
                android:buttonTint="#FF0000"/>
        </RadioGroup>

        <!-- BOTÃƒO -->
        <Button
            android:id="@+id/btnSignInCreate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="CONECTAR E CRIAR LIVE"
            android:backgroundTint="#FF0000"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aguardando..."
            android:textColor="#888888"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
