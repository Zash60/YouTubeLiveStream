<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Titulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Card de Gravacao e Overlay -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recording_overlay"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Gravacao Local -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_text_background"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/local_record_label"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/local_record_desc"
                            android:textColor="@color/text_tertiary"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <Switch
                        android:id="@+id/switchLocalRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/youtube_red"
                        android:trackTint="@color/text_disabled"/>
                </LinearLayout>

                <!-- Qualidade da Gravacao -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recording_quality_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinnerRecordingQuality"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:layout_marginBottom="16dp"/>

                <!-- Formato da Gravacao -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recording_format_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinnerRecordingFormat"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:layout_marginBottom="16dp"/>

                <!-- URL de Alertas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alerts_url_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:id="@+id/etWebOverlayUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/alerts_url_hint"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_disabled"
                    android:padding="16dp"
                    android:inputType="textUri"/>

                <Button
                    android:id="@+id/btnOpenOverlayEditor"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/overlay_editor"
                    android:textSize="14sp"
                    android:backgroundTint="@color/accent_blue"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card de Imagem de Pausa -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pause_image_label"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/txtImageStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_image_selected"
                    android:textColor="@color/text_tertiary"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_variant"
                    app:cardCornerRadius="12dp"
                    android:layout_marginBottom="12dp">
                    <ImageView
                        android:id="@+id/imgPreview"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:background="@color/background" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btnSelectImage"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="@string/select_gallery"
                        android:textSize="14sp"
                        android:backgroundTint="@color/accent_blue"
                        android:layout_marginEnd="12dp"/>
                    <Button
                        android:id="@+id/btnRemoveImage"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="@string/remove"
                        android:textSize="14sp"
                        android:backgroundTint="@color/error"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card de Configuracoes de Video -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/codec_label"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Codec -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/codec_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinnerCodec"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:layout_marginBottom="16dp"/>

                <!-- Resolucao -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resolution_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinnerResolution"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:layout_marginBottom="16dp"/>

                <!-- FPS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fps_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinnerFps"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:layout_marginBottom="16dp"/>

                <!-- Bitrate Video -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_bitrate_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinnerVideoBitrate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:layout_marginBottom="16dp"/>

                <!-- Bitrate Audio -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_bitrate_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinnerAudioBitrate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:layout_marginBottom="16dp"/>

                <!-- Taxa de Amostragem -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_rate_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinnerSampleRate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@drawable/spinner_popup_background"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botao Salvar -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/save_settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/success"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
