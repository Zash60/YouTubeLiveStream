                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#FF0000"
                android:trackTint="#aaaaaa"/>
        </LinearLayout>

        <!-- WEB SOURCE (ALERTS) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL de Alertas (Streamlabs/Elements)"
