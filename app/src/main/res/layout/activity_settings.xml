        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2d2d44"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="24dp">
            <LinearLayout
